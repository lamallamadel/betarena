rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin API monitoring (read-only for authenticated admins)
    match /artifacts/{appId}/admin/api_monitoring/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }

    // Feature Flags - read-only for all authenticated users, write for admins only
    match /artifacts/{appId}/config/feature_flags/environments/{environment} {
      allow read: if request.auth != null;
      allow write: if request.auth != null; // TODO: Add admin role check
    }

    // Feature Flags change logs - read-only for admins
    match /artifacts/{appId}/config/feature_flags/logs/{logId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; // TODO: Add admin role check
      allow update, delete: if false;
    }

    // Analytics - Champion Variance (read-only for authenticated users, write for system only)
    match /artifacts/{appId}/analytics/champion_variance/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend/Cloud Functions can write
    }

    // Analytics - Bottom 50% Retention (read-only for authenticated users, write for system only)
    match /artifacts/{appId}/analytics/bottom50_retention/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend/Cloud Functions can write
    }

    // Sync Queue - read/write for authenticated users (admin context), system can write
    match /artifacts/{appId}/admin/sync_queue/{document=**} {
      allow read: if request.auth != null;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null;
    }

    // API Health Status - read for authenticated users, write for system only
    match /artifacts/{appId}/admin/api_health/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }

    // Marketplace Error Monitoring - read for authenticated admins, write for system only
    match /artifacts/{appId}/monitoring/marketplace_errors/errors/{errorId} {
      allow read: if request.auth != null; // TODO: Add admin role check
      allow write: if false; // Only Cloud Functions can write
    }

    match /artifacts/{appId}/monitoring/marketplace_errors/rollbacks/{rollbackId} {
      allow read: if request.auth != null; // TODO: Add admin role check
      allow write: if false; // Only Cloud Functions can write
    }

    match /artifacts/{appId}/monitoring/marketplace_errors/duplicate_attempts/{attemptId} {
      allow read: if request.auth != null; // TODO: Add admin role check
      allow write: if false; // Only Cloud Functions can write
    }

    match /artifacts/{appId}/monitoring/marketplace_errors/alerts/{alertId} {
      allow read: if request.auth != null; // TODO: Add admin role check
      allow write: if false; // Only Cloud Functions can write
    }

    match /artifacts/{appId}/monitoring/marketplace_errors/counters/{functionName} {
      allow read: if request.auth != null; // TODO: Add admin role check
      allow write: if false; // Only Cloud Functions can write
    }

    // Temporary open access (TODO: Implement proper security rules)
    match /{document=**} {
      allow read, write: if
          request.time < timestamp.date(2030, 12, 31);
    }
  }
}