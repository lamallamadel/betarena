rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Admin API monitoring (read-only for authenticated admins)
    match /artifacts/{appId}/admin/api_monitoring/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Only Cloud Functions can write
    }

    // Temporary open access (TODO: Implement proper security rules)
    match /{document=**} {
      allow read, write: if
          request.time < timestamp.date(2030, 12, 31);
    }
  }
}